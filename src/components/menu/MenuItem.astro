---
import type {FeatureImages} from "@/types"
import {formatAmount} from "@/helpers"
import { Picture } from "astro:assets"
interface Props{
    title: string
    description:string
    price: number
    image: FeatureImages
}
const {title, description, image, price}= Astro.props
---
<li class="flex flex-col md:flex-row lg:justify-between gap-5 w-full md:items-center p-5  ">
  <div class="flex-1 flex flex-col md:flex-row gap-5 items-center ">
    <div class="w-full md:w-40 lg:w-56 overflow-hidden">
        <a 
            href={image.full.url}
            data-pswp-width={image.full.width}
            data-pswp-height={image.full.height}
            target="_blank"
        >
        <Picture 
        src={image.medium.url}
        alt={`Imagen del MenÃº ${title}`}
        width={image.medium.width}
        height={image.medium.height}
        formats={["avif", "webp"]}
        class="w-full h-64 lg:h-40 object-cover border-8 border-white"
        />
    </a>
    </div>
    <div class="flex-1">
      <p class="text-white font-bold text-2xl text-center md:text-left">{title}</p>
      <p class="text-coffee-400 text-lg  text-center md:text-left">{description}</p>
    </div>
  </div>
  <p class="text-4xl font-black text-white text-center md:text-left">{formatAmount(price)}</p>
</li>

