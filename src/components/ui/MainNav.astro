const navigation = [
  {name: 'Inicio', href: '/' },
  {name: 'Nosotros', href: '/nosotros/' },
  {name: 'Blog', href: '/blog/' },
  {name: 'Proceso', href: '/proceso/' },
  {name: 'MenÃº', href: '/menu/' },
  {name: 'GalerÃ­a', href: '/galeria/' },
  {name: 'Contacto', href: '/contacto/' },
]

const currentPath = Astro.url.pathname

const isActive = (href: string) =>{
  if(href=== "/") return currentPath === "/"
  return currentPath.startsWith(href)
}
---

<nav class="flex flex-col lg:flex-row gap-3 items-center ">
    {navigation.map(item=>
        <a href={item.href} class={`${isActive(item.href) ? "text-coffee-400" : "text-white hover:text-coffee-400" } uppercase text-lg font-bold `}>{item.name}</a>
    )}
</nav>