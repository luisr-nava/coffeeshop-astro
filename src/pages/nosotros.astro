---
    import Layout from "@/layouts/Layout.astro";
    import { BaseWPSchema } from "@/types";
    import { Picture } from "astro:assets";
    const url = `${import.meta.env.API_URL}/pages?slug=nosotros`
    const res = await fetch(url);
    const json = await res.json();
    const data = BaseWPSchema.parse(json[0]);
---

<Layout 
    subtitle={data.acf.subtitle}
    bgImage={data.feature_images.full.url}
    title={data.title.rendered}>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        <Picture 
            src={data.feature_images.medium_large.url}
            alt={`Imagen de ${data.title.rendered}`}
            width={data.feature_images.medium_large.width}
            height={data.feature_images.medium_large.height}
            formats={["avif", "webp"]}
        
        />
        <div class="text-xl space-y-10 mt-10 lg:mt-0" set:html={ data.content.rendered}></div>
    </div>    
</Layout>